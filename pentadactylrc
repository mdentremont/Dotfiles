loadplugins '\.(js|penta)$'
group user
map -count -modes=b,c,i,n,t,v <C-a> <count><pass-next-key>
map -count -modes=b,c,i,n,t,v <C-c> <count><Pass>
map -count -modes=b,c,i,n,t,v <C-l> <count><Pass>
map -count -modes=b,c,i,n,t,v <C-v> <count><Pass>
map -count -modes=b,c,i,n,t,v <C-x> <count><Pass>
set defsearch=g
set guioptions=bCrsB

