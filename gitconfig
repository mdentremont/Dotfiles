# David Gageot's wip/unwip & more (https://gist.github.com/492227)
# [alias]
    wip = !"git add --all; git ls-files --deleted -z | xargs -r -0 git rm; git commit -m \"DRAFT - WIP\""
    unwip = !"git log -n 1 | grep -q -c 'DRAFT - WIP' && git reset HEAD~1"

    rewip = !"git checkout master && git pull && git checkout $1 && git unwip && git wip && git rebase master"

    #rebase on origin master
    rbo = !"git wip;git rebase -i origin/master;git unwip"
    pr = !"git fetch;git wip;git rebase --stat origin;git unwip;git heads"
    head = !"git log -n1"
    #lost = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Creset %f' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
